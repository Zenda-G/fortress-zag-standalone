{
  "name": "fortress-zag-standalone",
  "version": "4.1.0",
  "description": "Memory-optimized autonomous AI assistant v4.1 - PicoClaw-inspired efficiency",
  "main": "src/index.js",
  "scripts": {
    "start": "node --max-old-space-size=128 src/index.js",
    "start:optimized": "node --max-old-space-size=128 src/core/agent-optimized.js",
    "cli": "node src/interfaces/cli.js",
    "test": "node test-full.js",
    "test:v4": "node test-v4.js",
    "test:optimized": "node test-optimized.js",
    "install:browser": "npx playwright install chromium",
    "build:binary": "pkg . --out-path=dist/",
    "docker:build": "docker build -t fortress-zag .",
    "docker:run": "docker run -v $(pwd)/data:/app/data -p 3000:3000 --memory=256m fortress-zag",
    "git:init": "git init && git add -A && git commit -m 'Initial commit'",
    "setup": "node setup/setup.js",
    "benchmark": "node benchmark/startup.js"
  },
  "keywords": ["ai", "assistant", "autonomous", "secure", "standalone", "memory-optimized", "lazy-loading"],
  "author": "Zak & Zag",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "discord.js": "^14.14.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "node-cron": "^3.0.3",
    "node-telegram-bot-api": "^0.64.0",
    "playwright": "^1.40.0",
    "uuid": "^9.0.0"
  },
  "optionalDependencies": {
    "playwright": "^1.40.0"
  },
  "pkg": {
    "scripts": [
      "src/**/*.js"
    ],
    "assets": [
      "SOUL.md",
      "README.md"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-win-x64",
      "node18-macos-x64"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}